<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/coner_bg_white"
    android:layout_gravity="center"
    android:minHeight="150dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="220dp">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:text="设置密码"
        android:textColor="#1ABDE6"
        android:layout_margin="5dp"
        android:padding="8dp"
        android:id="@+id/tv_setuppwd_title"/>

    <View android:background="#1ABDE6"
        android:layout_height="1.5px"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"/>

    <EditText android:background="@drawable/edit_normal"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:id="@+id/et_firstpwd"
        android:hint="请输入密码"
        android:inputType="textPassword"/>

    <EditText
        android:background="@drawable/add"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:id="@+id/et_affirm_password"
        android:hint="请再次输入密码"
        android:inputType="textPassword"/>

    <View android:background="#1ABDE6"
        android:layout_height="1.0px"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

    <Button android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="确认"
        android:id="@+id/btn_ok"
        android:layout_weight="1"/>

    <View android:background="#1ABDE6"
        android:layout_height="match_parent"
        android:layout_width="1.0px"/>

    <Button
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_width="0dp" android:text="取消"
        android:id="@+id/btn_cancle"
        android:layout_weight="1"/>

</LinearLayout>

</LinearLayout>
